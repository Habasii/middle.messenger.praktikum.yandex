<div>
    <div class="container profile">
        <div class="list-left-block">
            <div class="list-search">{{> ListSearch profile="true" }}</div>
            <div class="list-contacts-container">
                <div class="avatar-container">
                    <img class="profile-avatar">
                </div>
                <div class="lofin-info-container">
                    {{> Input label="Логин" name="login" }}
                    {{> Input label="Телефон" name="phone" }}
                </div>
                <div class="profile-actions-1">
                    {{> ButtonLink label="Выйти" href="#" page="login" type="link" }}
                </div>
            </div>
        <div class=""></div>
        </div>
        <div class="list-right-block">
            <div class="selected-user-top-info"></div>
            <div class="profile-info">
                <div class="profile-info-data">
                    <form class="user-form">
                        {{> Input label="Почта" name="email" disabled="true" }}
                        {{> Input label="Имя" name="first_name" }}
                        {{> Input label="Фамилия" name="second_name" }}
                        {{> Input label="Пароль" name="password" }}
                        {{> Input label="Повторите пароль" name="repeat_password" }}
                    </form>
                </div>
                <div class="profile-actions-2">
                    {{> ButtonLink label="Изменить данные" href="#" page="profile" type="primary"}}
                    {{> ButtonLink label="Изменить пароль" href="#" page="login" type="link" }}
                </div>
            </div>
        </div>
    </div>
</div>